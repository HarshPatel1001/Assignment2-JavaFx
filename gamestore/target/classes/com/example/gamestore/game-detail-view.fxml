<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gamestore.GameDetailController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Button fx:id="backButton" text="Back to Home" onAction="#handleBackButton" styleClass="button"/>
    <Label fx:id="nameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Label fx:id="releaseDateLabel"/>
    <Label fx:id="descriptionLabel" id="descriptionLabel"/> <!-- Ensure this id is in your CSS -->
    <ImageView fx:id="backgroundImageView" fitHeight="300" fitWidth="400" preserveRatio="true" styleClass="image-view"/>
</VBox>
